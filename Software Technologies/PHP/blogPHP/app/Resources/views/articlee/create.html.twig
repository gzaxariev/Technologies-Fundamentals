{% extends 'base.html.twig' %}

{% block body %}

<div class="container body-content span=8 offset=2">
    <div class="well">
        <form class="form-horizontal" action="{{ path('articlee_create') }}" method="POST">
            <fieldset>
                <legend>New Post</legend>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="article_title">Post Title</label>
                    <div class="col-sm-4 ">
                        <input type="text" class="form-control" id="articlee_title" placeholder="Post Title"
                               name="articlee[title]">
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-4 control-label" for="articlee_content">Content</label>
                    <div class="col-sm-6">
                        <textarea class="form-control" rows="6" id="articlee_content"
                                  name="articlee[content]"></textarea>
                    </div>
                </div>

                {{ form_row(form._token) }}

                <div class="form-group">
                    <div class="col-sm-4 col-sm-offset-4">
                        <a class="btn btn-default" href="{{ path('blog_index') }}">Cancel</a>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>

{% endblock %}
